<Page
	x:Class="Files.App.Views.Settings.IpcPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:helpers="using:Files.App.Helpers"
	xmlns:vm="using:Files.App.ViewModels.Settings"
	xmlns:wctcontrols="using:CommunityToolkit.WinUI.Controls"
	mc:Ignorable="d">

	<Page.DataContext>
		<vm:IpcViewModel />
	</Page.DataContext>

	<Grid>
		<StackPanel Spacing="4">
			<TextBlock
				Padding="0,0,0,12"
				FontSize="24"
				FontWeight="Medium"
				Text="{helpers:ResourceString Name=RemoteControl}" />

			<wctcontrols:SettingsCard Header="{helpers:ResourceString Name=EnableRemoteControl}">
				<wctcontrols:SettingsCard.HeaderIcon>
					<FontIcon Glyph="&#xE9A1;" />
				</wctcontrols:SettingsCard.HeaderIcon>
				<ToggleSwitch IsOn="{Binding IsEnabled, Mode=TwoWay}" />
			</wctcontrols:SettingsCard>

			<wctcontrols:SettingsCard Header="{helpers:ResourceString Name=Token}">
				<Grid ColumnSpacing="12">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
					<TextBlock Text="{Binding Token}" TextTrimming="CharacterEllipsis" />
					<Button Grid.Column="1" Content="{helpers:ResourceString Name=Copy}" Command="{Binding CopyTokenCommand}" />
					<Button Grid.Column="2" Content="{helpers:ResourceString Name=Rotate}" Command="{Binding RotateTokenCommand}" />
				</Grid>
			</wctcontrols:SettingsCard>

			<TextBlock TextWrapping="WrapWholeWords" Opacity="0.8">
				<Run Text="{helpers:ResourceString Name=RemoteControlHint}" />
			</TextBlock>
		</StackPanel>
	</Grid>
</Page>
